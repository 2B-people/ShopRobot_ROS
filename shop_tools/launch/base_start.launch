<launch>
  serial communication between arduino and pc via usb /
  <node name="arduino_serial_node" pkg="rosserial_python" type="serial_node.py" output="screen">
    <param name="port" value="/dev/ttyUSB0" />
    <param name="baud" value="57600" />
  </node>

  <node name="apply_calib" pkg="imu_calib" type="apply_calib"  output="screen" respawn="false">
    <param name="calib_file" value="$(find shop_tools)/param/imu_calib.yaml" />
  </node>


  <node name="imu_filter_madgwick" pkg="imu_filter_madgwick" type="imu_filter_node" output="screen" respawn="false" >
     <param name="fixed_frame" value="odom" />
     <param name="use_mag" value="true" />
     <param name="publish_tf" value="true" />
     <param name="use_magnetic_field_msg" value="true" />  
     <param name="world_frame" value="enu" />
  </node>

  <node name="shop_base" pkg="shop_base" type="shop_base">
    <param name="angular_scale" type="double" value="0.85" />
    <param name="linear_scale" type="double" value="1.0" />
  </node>
</launch>